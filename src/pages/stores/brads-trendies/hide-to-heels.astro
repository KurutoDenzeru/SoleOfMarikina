---
import { Play } from "lucide-react";
import BaseLayout from "@/layouts/BaseLayout.astro";
import MobileTopNavbar from "@/components/MobileTopNavbar.astro";

const bradsMapBackground = "/map/brads.png";
---

<BaseLayout title="Brad's Trendies | Hide To Heels">
  <section
    class="relative min-h-screen w-full overflow-x-hidden bg-[#160500] bg-cover bg-top bg-no-repeat sm:bg-center"
    style={`background-image:url('${bradsMapBackground}');`}
  >
    <div
      class="fixed inset-0 z-0 pointer-events-none bg-[linear-gradient(180deg,rgba(232,129,33,0.82)_0%,rgba(176,67,10,0.8)_28%,rgba(95,26,4,0.88)_56%,rgba(21,6,1,0.95)_78%,rgba(0,0,0,1)_100%)]"
      aria-hidden="true"
    ></div>

    <MobileTopNavbar
      leftAction={{
        type: "link",
        icon: "move-left",
        ariaLabel: "Back to Souls Behind the Soles",
        href: "/stores/brads-trendies/souls-behind-the-soles",
        className: "rounded-md text-white",
      }}
      rightAction={{
        type: "button",
        icon: "search",
        ariaLabel: "Search store content",
        className: "rounded-md text-white",
      }}
      centerImageSrc="/Logo/Brads Trendies.webp"
      centerImageAlt="Brad's Trendies"
      centerImageClass="h-16 w-auto max-w-xs object-contain sm:h-12"
      containerClass="sticky top-0 z-40 grid grid-cols-[1fr_auto_1fr] items-center px-6 pt-5 pb-3 text-white sm:px-8 sm:pt-6 sm:pb-3"
    />

    <main class="relative z-20 mx-auto w-full max-w-[430px] px-6 pb-12 sm:px-8 sm:pb-10">
      <section class="relative -mx-6 -mt-2 h-[50svh] overflow-hidden sm:-mx-8 sm:h-[56svh]" aria-label="Hide to Heels video placeholder">
        <img
          src="/map/brads.png"
          alt="Hide to Heels video placeholder"
          loading="lazy"
          decoding="async"
          class="h-full w-full object-cover object-center"
        />
        <button
          type="button"
          aria-label="Play Hide to Heels video (placeholder)"
          class="absolute inset-0 m-auto inline-flex size-18 items-center justify-center rounded-full bg-[#2b0e04]/96 text-white"
        >
          <Play className="ml-1 size-8 fill-current" />
        </button>
      </section>

      <h1 class="mx-auto mt-8 max-w-[14ch] text-center text-4xl leading-[0.9] font-extrabold tracking-[-0.02em] text-white sm:mt-8 sm:max-w-md sm:text-6xl md:text-7xl">
        HIDE TO HEELS
      </h1>

      <p class="mx-auto mt-6 text-center text-sm leading-[1.3] font-semibold text-white/95 sm:max-w-3xl sm:text-base sm:leading-relaxed sm:font-medium md:text-lg">
        The Brad's Trendies process transforms raw, premium cowhide into iconic footwear by meticulously hand-cutting, stitching, and molding genuine Marikina craftsmanship into a modern, minimalist silhouette ready for the digital age.
      </p>
    </main>
  </section>
</BaseLayout>
