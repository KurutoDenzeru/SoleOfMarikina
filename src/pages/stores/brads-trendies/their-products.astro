---
import BaseLayout from "@/layouts/BaseLayout.astro";
import MobileTopNavbar from "@/components/MobileTopNavbar.astro";

const bradsMapBackground = "/map/brads.png";
const products = [
  { name: "GG Leather", price: "₱ 600", image: "/pictures/Brad%20Trendies/GG%20Leather.jpg" },
  { name: "Slip On", price: "₱ 800", image: "/pictures/Brad%20Trendies/Slip%20On.jpg" },
  { name: "AA Clogs Leather", price: "₱ 1,500", image: "/pictures/Brad%20Trendies/AA%20Clogs%20Leather.jpg" },
  { name: "A4 Clogs", price: "₱ 1,500", image: "/pictures/Brad%20Trendies/A4%20Clogs.jpg" },
  { name: "S1", price: "₱ 2000", image: "/pictures/Brad%20Trendies/S1.jpg" },
];
---

<BaseLayout title="Brad's Trendies | Their Products">
  <section
    class="relative min-h-screen w-full overflow-x-hidden bg-[#160500] bg-cover bg-top bg-no-repeat sm:bg-center"
    style={`background-image:url('${bradsMapBackground}');`}
  >
    <div
      class="fixed inset-0 z-0 pointer-events-none bg-[linear-gradient(180deg,rgba(232,129,33,0.82)_0%,rgba(176,67,10,0.8)_28%,rgba(95,26,4,0.88)_56%,rgba(21,6,1,0.95)_78%,rgba(0,0,0,1)_100%)]"
      aria-hidden="true"
    ></div>

      <MobileTopNavbar
        leftAction={{
          type: "link",
          icon: "move-left",
          ariaLabel: "Back to Souls Behind the Soles Story",
          href: "/stores/brads-trendies/souls-behind-the-soles-story",
          className: "rounded-md text-white",
        }}
      rightAction={{
        type: "button",
        icon: "search",
        ariaLabel: "Search store content",
        className: "rounded-md text-white",
      }}
      centerImageSrc="/Logo/Brads Trendies.webp"
      centerImageAlt="Brad's Trendies"
      centerImageClass="h-16 w-auto max-w-xs object-contain sm:h-12"
      containerClass="sticky top-0 z-40 grid grid-cols-[1fr_auto_1fr] items-center px-6 pt-5 pb-3 text-white sm:px-8 sm:pt-6 sm:pb-3"
    />

    <main class="relative z-20 mx-auto w-full max-w-[430px] px-6 pb-12 sm:px-8 sm:pb-10">
      <h1 class="mx-auto mt-10 max-w-[14ch] text-center text-4xl leading-[0.9] font-extrabold tracking-[-0.02em] text-white sm:mt-8 sm:max-w-md sm:text-6xl md:text-7xl">
        THEIR PRODUCTS
      </h1>

      <div class="mt-8 space-y-6 sm:mt-10">
        {
          products.map((product) => (
            <article
              class="relative h-64 overflow-hidden rounded-[2rem] bg-black shadow-[0_8px_24px_rgba(0,0,0,0.35)] sm:h-72"
              style={`background-image:url('${product.image}'); background-size:cover; background-position:center;`}
            >
              <div class="absolute inset-0 bg-[linear-gradient(180deg,rgba(0,0,0,0.46)_0%,rgba(0,0,0,0.12)_42%,rgba(0,0,0,0.06)_100%)]" aria-hidden="true"></div>
              <div class="absolute top-5 left-5 text-left text-white leading-none">
                <p class="text-2xl font-extrabold sm:text-4xl">{product.name}</p>
                <p class="mt-0.5 text-xl font-extrabold sm:text-3xl">{product.price}</p>
              </div>
            </article>
          ))
        }
      </div>
    </main>
  </section>
</BaseLayout>
