---
import "@/styles/global.css";
import { Play } from "lucide-react";
import MobileTopNavbar from "@/components/MobileTopNavbar.astro";
import { getStoreBySlug } from "@/lib/store-pages";

const store = getStoreBySlug("nico-angelo");
if (!store) {
  throw new Error("Nico Angelo store data is missing.");
}

const nicoMapBackground = "/map/nico%20angelo.png";
const staff = [
  {
    name: "Nick Dela Paz",
    role: "Owner",
    image: "/pictures/Nico%20Angelo/Nick%20Dela%20Paz.jpg",
    owner: true,
  },
  {
    name: "Jose Arlyn",
    role: "Cutter",
    image: "/pictures/Nico%20Angelo/Jose%20Arlyn.jpg",
  },
  {
    name: "Noel Dela Paz",
    role: "Shoemaker",
    image: "/pictures/Nico%20Angelo/Noel%20Dela%20Paz.jpg",
  },
  {
    name: "Mennen Beque",
    role: "Sewer",
    image: "/pictures/Nico%20Angelo/Mennen%20Beque.jpg",
  },
  {
    name: "Rosemarie Bermudez",
    role: "Upper Making",
    image: "/pictures/Nico%20Angelo/Rosemarie%20Bermudez.jpg",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nico Angelo | Souls Behind the Soles</title>
  </head>
  <body>
    <section
      class="relative min-h-screen w-full overflow-hidden bg-[#160500] bg-cover bg-top bg-no-repeat sm:bg-center"
      style={`background-image:url('${nicoMapBackground}');`}
    >
      <div
        class="absolute inset-0 z-0 bg-[linear-gradient(180deg,rgba(125,37,4,0.5)_0%,rgba(63,16,1,0.76)_34%,rgba(8,2,0,0.92)_62%,rgba(0,0,0,0.98)_100%)]"
        aria-hidden="true"
      ></div>

      <MobileTopNavbar
        leftAction={{
          type: "link",
          icon: "move-left",
          ariaLabel: "Back to walk with them",
          href: "/stores/nico-angelo/walk-with-them",
          className: "rounded-md text-white",
        }}
        centerImageSrc="/Logo/Nico Angelo Logo.webp"
        centerImageAlt="Nico Angelo"
        centerImageClass="h-16 w-auto max-w-xs object-contain sm:h-12"
        containerClass="relative z-20 grid grid-cols-[1fr_auto_1fr] items-center px-6 pt-6 text-white sm:px-8"
      >
        <span slot="right" class="ml-auto block size-8" aria-hidden="true"></span>
      </MobileTopNavbar>

      <main class="relative z-20 mx-auto w-full max-w-[430px] px-6 pb-12 sm:max-w-none sm:px-8 sm:pb-10">
        <section class="mx-auto mt-14 w-full max-w-[22rem] sm:mt-12" aria-label="Story video placeholder">
          <div class="relative aspect-video overflow-hidden rounded-[1.8rem] border border-white/20 bg-black/35">
            <img
              src="/map/nico%20angelo.png"
              alt="Video placeholder background"
              loading="lazy"
              decoding="async"
              class="h-full w-full object-cover opacity-35"
            />
            <div class="absolute inset-0 bg-black/30"></div>
            <button
              type="button"
              aria-label="Play story video (placeholder)"
              class="absolute inset-0 m-auto inline-flex size-18 items-center justify-center rounded-full bg-[#2b0e04]/90 text-white shadow-lg transition hover:bg-[#1f0902]"
            >
              <Play className="ml-1 size-8 fill-current" />
            </button>
          </div>
        </section>

        <h1
          class="mx-auto mt-12 max-w-[14ch] text-center text-4xl leading-[0.9] font-extrabold tracking-[-0.02em] text-white sm:mt-8 sm:max-w-md sm:text-6xl md:text-7xl"
        >
          {store.heroTitle}
        </h1>

        <p
          class="mx-auto mt-6 text-center text-sm leading-[1.3] font-semibold text-white/95 sm:max-w-3xl sm:text-base sm:leading-relaxed sm:font-medium md:text-lg"
        >
          {store.storyIntro}
        </p>

        <section class="mt-8">

          <div class="mt-6 space-y-8">
            {
              staff
                .filter((member) => member.owner)
                .map((member) => (
                  <article class="mx-auto w-[72%] max-w-[320px] text-center text-white">
                    <img
                      src={member.image}
                      alt={`${member.name} - ${member.role}`}
                      loading="lazy"
                      decoding="async"
                      class="aspect-[3/4] w-full rounded-[2rem] object-cover object-center"
                    />
                    <p class="mt-2 text-2xl leading-none font-extrabold">{member.name}</p>
                    <p class="text-xl leading-none font-medium text-white/90">{member.role}</p>
                  </article>
                ))
            }

            <div class="grid grid-cols-2 gap-4 sm:gap-5">
              {
                staff
                  .filter((member) => !member.owner)
                  .map((member) => (
                    <article class="text-center text-white">
                      <img
                        src={member.image}
                        alt={`${member.name} - ${member.role}`}
                        loading="lazy"
                        decoding="async"
                        class="aspect-[3/4] w-full rounded-[1.8rem] object-cover object-center"
                      />
                      <p class="mt-2 text-lg leading-none font-extrabold sm:text-2xl">{member.name}</p>
                      <p class="text-base leading-none font-medium text-white/90 sm:text-xl">
                        {member.role}
                      </p>
                    </article>
                  ))
              }
            </div>
          </div>
        </section>

        <div class="text-center">
          <a
            href="/stores/nico-angelo/their-products"
            class="mx-auto mt-11 inline-flex min-w-[17.5rem] items-center justify-center rounded-full bg-[#4a1c09]/80 px-8 py-3 text-base font-medium whitespace-nowrap text-white transition hover:bg-[#3e1707]/85 sm:mt-10 sm:py-4 sm:text-4xl sm:font-semibold"
          >
            See Step by Step Process
          </a>
        </div>
      </main>
    </section>
  </body>
</html>
