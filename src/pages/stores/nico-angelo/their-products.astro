---
import "@/styles/global.css";
import MobileTopNavbar from "@/components/MobileTopNavbar.astro";

const nicoMapBackground = "/map/nico%20angelo.png";
const products = [
  {
    name: "Slippers",
    price: "₱ 900",
    image: "/pictures/Nico%20Angelo/Slippers.jpg",
  },
  {
    name: "Elevated",
    price: "₱ 1,000",
    image: "/pictures/Nico%20Angelo/Elevated.jpg",
  },
  {
    name: "Topsider",
    price: "₱ 1,000",
    image: "/pictures/Nico%20Angelo/Topsider.jpg",
  },
  {
    name: "BGH",
    price: "₱ 1,700",
    image: "/pictures/Nico%20Angelo/BGH.jpg",
  },
  {
    name: "Wingtip",
    price: "₱ 2,500",
    image: "/pictures/Nico%20Angelo/Wingtip.jpg",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nico Angelo | Their Products</title>
  </head>
  <body>
    <section
      class="relative min-h-screen w-full overflow-x-hidden bg-[#160500] bg-cover bg-top bg-no-repeat sm:bg-center"
      style={`background-image:url('${nicoMapBackground}');`}
    >
      <div
        class="fixed inset-0 z-0 pointer-events-none bg-[linear-gradient(180deg,rgba(232,129,33,0.82)_0%,rgba(176,67,10,0.8)_28%,rgba(95,26,4,0.88)_56%,rgba(21,6,1,0.95)_78%,rgba(0,0,0,1)_100%)]"
        aria-hidden="true"
      ></div>

      <MobileTopNavbar
        leftAction={{
          type: "link",
          icon: "move-left",
          ariaLabel: "Back to Hide to Heels",
          href: "/stores/nico-angelo/hide-to-heels",
          className: "rounded-md text-white",
        }}
        rightAction={{
          type: "button",
          icon: "search",
          ariaLabel: "Search store content",
          className: "rounded-md text-white",
        }}
        centerImageSrc="/Logo/Nico Angelo Logo.webp"
        centerImageAlt="Nico Angelo"
        centerImageClass="h-16 w-auto max-w-xs object-contain sm:h-12"
        containerClass="sticky top-0 z-40 grid grid-cols-[1fr_auto_1fr] items-center px-6 pt-5 pb-3 text-white sm:px-8 sm:pt-6 sm:pb-3"
      />

      <main class="relative z-20 mx-auto w-full max-w-[430px] px-6 pb-12 sm:max-w-none sm:px-8 sm:pb-10">
        <h1
          class="mx-auto mt-10 max-w-[14ch] text-center text-4xl leading-[0.9] font-extrabold tracking-[-0.02em] text-white sm:mt-8 sm:max-w-md sm:text-6xl md:text-7xl"
        >
          THEIR PRODUCTS
        </h1>

        <div class="mt-8 space-y-6 sm:mt-10">
          {
            products.map((product) => (
              <article
                class="relative h-64 overflow-hidden rounded-[2rem] bg-black shadow-[0_8px_24px_rgba(0,0,0,0.35)] sm:h-72"
                style={`background-image:url('${product.image}'); background-size:cover; background-position:center;`}
              >
                <div class="absolute top-5 left-5 text-left text-white leading-none">
                  <p class="text-2xl font-extrabold sm:text-4xl">{product.name}</p>
                  <p class="mt-0.5 text-xl font-extrabold sm:text-3xl">{product.price}</p>
                </div>
              </article>
            ))
          }
        </div>
      </main>
    </section>
  </body>
</html>
