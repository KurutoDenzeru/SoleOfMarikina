---
import { stores } from "@/lib/store-pages";
import BaseLayout from "@/layouts/BaseLayout.astro";

export async function getStaticPaths() {
  return stores.map((store) => ({
    params: { store: store.slug },
    props: { store },
  }));
}

const { store } = Astro.props;
const walkUrl = `/stores/${store.slug}/walk-with-them`;
---

<BaseLayout title={store.name} bodyClass="bg-black text-white">
  <Fragment slot="head">
    <meta http-equiv="refresh" content={`0; url=${walkUrl}`} />
  </Fragment>
  <main class="flex min-h-screen items-center justify-center p-6 text-center">
    <p class="text-lg">
      Redirecting to
      <a href={walkUrl} class="ml-1 underline underline-offset-4">Walk With Them</a>.
    </p>
  </main>
</BaseLayout>
