---
import { ArrowLeft, MapPin, Menu, Search } from "lucide-react";

const navItems = ["Home", "Stores", "About", "Contact"];

const mapTags = [
  { label: "Brad's Trendies", top: "top-[15%]", left: "left-[38%]" },
  { label: "Nico Angelo", top: "top-[45%]", left: "left-[42%]" },
  { label: "Seacrest", top: "top-[60%]", left: "left-[22%]" },
];
---

<section class="bg-[#dddddd] px-4 py-6 md:px-8 md:py-8">
  <div class="mx-auto w-full max-w-6xl">
    <div class="mb-3 flex items-center justify-between text-xl font-medium text-[#a1a1a1] md:text-[2rem]">
      <p>Menu Bar</p>
      <p>Landing Page</p>
    </div>

    <div class="grid gap-4 md:grid-cols-[1.65fr_0.55fr]">
      <article class="relative min-h-[560px] overflow-hidden bg-gradient-to-b from-[#f1cf97] via-[#e98b1b] to-[#8e1f00]">
        <div class="absolute inset-0 text-[#f6d4a5]/40">
          <svg viewBox="0 0 100 100" class="h-full w-full" preserveAspectRatio="none" fill="none" stroke="currentColor" stroke-width="0.35">
            <path d="M2 8 L14 13 L28 9 L40 14 L58 11 L75 16 L96 12" />
            <path d="M0 22 L19 25 L34 18 L49 26 L63 20 L82 27 L100 23" />
            <path d="M4 37 L15 34 L30 40 L42 32 L59 39 L71 35 L90 43" />
            <path d="M0 55 L14 52 L24 58 L41 51 L58 57 L75 54 L100 61" />
            <path d="M5 74 L18 71 L32 77 L48 73 L63 79 L82 75 L96 82" />
            <path d="M0 90 L15 87 L33 93 L49 89 L66 96 L82 92 L100 97" />
            <path d="M17 0 L14 14 L21 28 L17 45 L23 62 L16 80 L22 100" />
            <path d="M42 0 L35 16 L44 34 L37 53 L46 72 L40 88 L47 100" />
            <path d="M68 0 L61 18 L70 32 L64 49 L72 66 L67 84 L74 100" />
            <path d="M88 0 L82 12 L90 31 L85 47 L93 64 L87 81 L95 100" />
          </svg>
        </div>

        <div class="absolute inset-y-0 left-0 w-[71%] bg-[#0d0703]/88"></div>

        <div class="relative z-10 flex h-full flex-col px-6 py-7 md:px-9 md:py-8">
          <div class="grid grid-cols-[1fr_auto_1fr] items-start">
            <button aria-label="Back" class="inline-flex w-fit text-white transition hover:text-white/80">
              <ArrowLeft className="size-8 md:size-9" />
            </button>

            <p class="text-center text-3xl font-black uppercase leading-[0.9] tracking-tight text-black md:text-[2.35rem]">
              Sole of
              <br />
              Marikina
            </p>

            <button aria-label="Search" class="ml-auto inline-flex rounded-full p-2 text-black transition hover:bg-black/10">
              <Search className="size-8 md:size-9" />
            </button>
          </div>

          <nav class="mt-14 space-y-6 text-white md:mt-16 md:space-y-8">
            {
              navItems.map((item, index) => (
                <a
                  href="#"
                  class:list={[
                    "block text-[2.1rem] leading-none tracking-tight transition hover:text-white/80 md:text-[2.5rem]",
                    index === 0 ? "font-extrabold" : "font-light",
                  ]}
                >
                  {item}
                </a>
              ))
            }
          </nav>

          <div class="pointer-events-none absolute inset-0 hidden md:block">
            {
              mapTags.map((tag) => (
                <div class:list={["absolute inline-flex items-center gap-2", tag.top, tag.left]}>
                  <MapPin className="size-7 text-black" />
                  <span class="rounded-full bg-black px-5 py-2 text-[1.85rem] font-semibold leading-none text-white/95">
                    {tag.label}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </article>

      <aside class="relative min-h-[320px] overflow-hidden bg-gradient-to-b from-[#f1cf97] via-[#e98b1b] to-[#8e1f00] md:min-h-[560px]">
        <div class="absolute inset-0 text-[#f6d4a5]/55">
          <svg viewBox="0 0 100 100" class="h-full w-full" preserveAspectRatio="none" fill="none" stroke="currentColor" stroke-width="0.35">
            <path d="M1 10 L16 16 L28 12 L41 18 L58 14 L76 20 L98 16" />
            <path d="M0 33 L18 29 L35 36 L48 30 L64 38 L82 34 L100 41" />
            <path d="M2 58 L14 54 L29 63 L44 56 L61 65 L80 60 L97 68" />
            <path d="M0 84 L13 80 L28 88 L45 82 L63 91 L82 85 L100 94" />
            <path d="M15 0 L10 17 L17 34 L11 52 L19 68 L12 84 L18 100" />
            <path d="M44 0 L39 18 L47 36 L41 54 L49 71 L42 89 L50 100" />
            <path d="M74 0 L69 14 L76 31 L70 49 L78 66 L71 83 L79 100" />
          </svg>
        </div>

        <div class="relative z-10 flex h-full flex-col items-end px-5 py-7 md:px-6 md:py-8">
          <button aria-label="Open menu" class="rounded-full p-2 text-black transition hover:bg-black/10">
            <Menu className="size-9 md:size-10" />
          </button>

          <div class="mt-auto hidden w-full justify-end pb-12 md:flex">
            <span class="rounded-full bg-black px-5 py-2 text-[1.7rem] font-semibold leading-none text-white">
              Soles
            </span>
          </div>
        </div>
      </aside>
    </div>
  </div>
</section>
